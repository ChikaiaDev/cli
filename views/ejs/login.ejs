<div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body ">
                <h1><i class="fab fa-node-js fa-3x text-center"></i>Login to your account</h1>
                <form action="/users/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" type="email" name="email" placeholder="Enter your email" value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" name="password" placeholder="Enter your password" value="<%= typeof password != 'undefined' ? password : '' %>">
                    </div>
                    <button type="submit" class="btn btn-success btn-block">Login</button>
                    <p class="lead mt-4">Don't have an account ? <a href="/users/register">Register</a></p>
                </form>
            </div>
        </div>
    </div>