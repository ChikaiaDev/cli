<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body ">
            <h1><i class="fab fa-node-js fa-3x text-center"></i>Register with us</h1>
            <% include ./partials/messages %>
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Enter your Name" value="<%= typeof name != 'undefined' ? name : '' %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="email" placeholder="Enter your email" value="<%= typeof email != 'undefined' ? email : '' %>">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Enter your password" value="<%= typeof password != 'undefined' ? password : '' %>">
                </div>
                <div class="form-group">
                    <label for="password2">Confirm your password</label>
                    <input class="form-control" type="password" name="password2" placeholder="Confirm Your password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
                </div>
                <button type="submit" class="btn btn-success btn-block">Register</button>
                <p class="lead mt-4">Already have an account ? <a href="/users/login">Login</a></p>
            </form>
        </div>
    </div>
</div>


